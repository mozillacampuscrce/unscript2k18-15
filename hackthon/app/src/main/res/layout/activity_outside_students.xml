<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.collekarry.hackthon.outsideStudents">

    <RelativeLayout
        android:id="@+id/bg8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/t4"
            android:layout_marginTop="52dp"
            android:text="Your name :"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nameEnter"
            android:layout_marginTop="36dp"
            android:text="Your college :"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/t2"
            android:layout_below="@+id/t2"
            android:layout_marginTop="48dp"
            android:text="Your university :"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/nameEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/t1"
            android:layout_toEndOf="@+id/t2"
            android:ems="10"
            android:hint="Enter your name.."
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/collgEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/t2"
            android:layout_toEndOf="@+id/t2"
            android:ems="10"
            android:hint="Enter your college.."
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/univEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/t3"
            android:layout_alignBottom="@+id/t3"
            android:layout_toEndOf="@+id/t3"
            android:ems="10"
            android:hint="Enter your university.."
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/selevtEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/t1"
            android:text="SELECT EVENT" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/selevtEvent"
            android:layout_marginTop="22dp"
            android:text="Selected Event:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/eventSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/t4"
            android:layout_alignBottom="@+id/t4"
            android:layout_alignStart="@+id/univEnter"
            android:text="zvczMXVNmzcxv"
            android:textSize="24sp" />

        <Button
            android:id="@+id/payButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/univEnter"
            android:layout_marginTop="55dp"
            android:layout_toEndOf="@+id/t1"
            android:text="PAY"
            android:textSize="24sp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
